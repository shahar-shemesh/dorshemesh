<section class="home-content">


            <% if (!isAuthenticated || !editing) { %>
                <h3 id="<%= page.pageName %>-content">
                    <%= page.pageContent %>
                </h3>
                
                
            <% } else { %>
                <form action="/admin/edit-content" method="POST">
                    <textarea class="styled-textarea" name="content" id="content" rows="6"><%= page.pageContent %></textarea>
                    <%- include('../../../admin/csrf-input.ejs') %>
                    <div class="save-btn-container">
                        <button class="save-btn" type="submit">Save</button>
                        <button id="cancel-btn" class="cancel-btn">Cancel</button>
                    </div>
                    <input type="hidden" value="<%= page.pageName %>" name="page">
                    <input type="hidden" value="<%= page.pageContent %>" id="previousPageContent" name="previousPageContent">
                </form>
                    
            <% } %>


</section>

